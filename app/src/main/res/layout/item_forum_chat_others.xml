<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context=".presentation.forum.message.MessageAdapter">

    <TextView
        android:id="@+id/chat_other_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/wa_text_color"
        android:textSize="@dimen/text_s"
        app:layout_constraintBottom_toTopOf="@id/chat_other_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_other_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wa_chat_others"
        android:maxWidth="253dp"
        android:minWidth="111dp"
        android:paddingHorizontal="@dimen/size_s"
        android:paddingTop="2dp"
        android:paddingBottom="@dimen/size_m"
        android:textColor="@color/wa_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_other_id" />

    <TextView
        android:id="@+id/chat_other_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_s"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/poppins_light"
        android:textAlignment="textEnd"
        android:textColor="@color/wa_white_color"
        android:textSize="@dimen/text_xs"
        app:layout_constraintBottom_toBottomOf="@id/chat_other_message"
        app:layout_constraintEnd_toEndOf="@id/chat_other_message" />
</androidx.constraintlayout.widget.ConstraintLayout>