<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_themethird_radiusm"
    android:padding="@dimen/size_s">

    <com.ilhamrhmtkbr.presentation.utils.component.InputText
        android:id="@+id/input_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:custom_label="Search Bank"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/banks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/banks"
        android:layout_marginVertical="@dimen/size_s"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="@dimen/size_s"
        android:background="@drawable/bg_themefourth_radiusm"
        app:layout_constraintTop_toBottomOf="@id/input_bank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>