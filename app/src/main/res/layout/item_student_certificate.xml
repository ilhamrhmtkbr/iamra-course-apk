<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".presentation.student.certificates.CertificatesAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/certificate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_themefifth_radiusm_bordercolordefault"
        android:padding="@dimen/size_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_s"
            android:text="@string/fragment_public_certificate_verify_text_1"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_s"
            android:fontFamily="@font/poppins_light"
            android:text="@string/fragment_public_certificate_verify_text_2"
            android:textAlignment="center"
            android:textSize="@dimen/text_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_1" />

        <TextView
            android:id="@+id/certificate_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_s"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_2" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_s"
            android:fontFamily="@font/poppins_light"
            android:text="@string/fragment_public_certificate_verify_text_3"
            android:textAlignment="center"
            android:textSize="@dimen/text_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/certificate_student" />

        <TextView
            android:id="@+id/certificate_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_s"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_3" />

        <TextView
            android:id="@+id/certificate_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textAlignment="center"
            android:textSize="@dimen/text_s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/certificate_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/button_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_s"
        android:background="@drawable/bg_blue_radiuss"
        android:focusable="true"
        android:foreground="@drawable/ripple_trans_bg_radiuss"
        android:paddingVertical="@dimen/size_xxs"
        android:text="@string/detail"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/text_s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate" />

</androidx.constraintlayout.widget.ConstraintLayout>