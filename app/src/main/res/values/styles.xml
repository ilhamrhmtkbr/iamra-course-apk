<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Custom.OnlineCourse.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeErrorColor">@color/red_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_s</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_s</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_s</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_s</item>
        <item name="hintTextAppearance">@style/Custom.OnlineCourse.HintText</item>
        <item name="helperTextTextAppearance">@style/Custom.OnlineCourse.HelperText</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/red_color</item>
        <item name="colorError">@color/red_color</item>
        <item name="errorTextAppearance">@style/Custom.OnlineCourse.ErrorText</item>
        <item name="errorTextColor">@color/red_color</item>
    </style>

    <style name="Custom.OnlineCourse.MaterialButton" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="strokeColor">@color/fragment_user_member_setting_outlined_button_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="iconTint">@color/text_color</item>
        <item name="rippleColor">@color/link_color</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Custom.OnlineCourse.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Custom.OnlineCourse.HintText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/link_color</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Custom.OnlineCourse.HelperText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/link_color</item>
    </style>

    <style name="Custom.OnlineCourse.ErrorText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/red_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Custom.OnlineCourse.ExpandedToolbarTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Custom.OnlineCourse.CollapsedToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Custom.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <!-- warna header -->
        <item name="colorAccent">@color/blue_color</item>
        <item name="android:windowBackground">@color/fifth_bg_color</item>

        <!-- warna teks -->
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

</resources>
